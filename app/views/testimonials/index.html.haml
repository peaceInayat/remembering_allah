%div.container
  %div#myCarousel.carousel.slide{"data-ride" => "carousel",style:'background:#685050;'}
    %ol.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
      - @testimonials.count.times do |i|
        %li{"data-slide-to" => i+1, "data-target" => "#myCarousel"}

    .carousel-inner
      .item.active
        %row
          %col-md-offset-2.col-md-8.col-md-offset-2{style:'padding:2% 0% 5% 0%;'}
            %p.testimonial=@testi_first.body
            %div.row{style:'padding-top:4%;'}
              %div.col-sm-3
                = image_tag @testi_first.image.url(:thumb), style:'height:120px; width:150px;', class:'img-thumbnail'
              %div.col-sm-9
                %p.reviewer=@testi_first.name
                %p=@testi_first.profession
        %row
          %col-md-offset-2.col-md-8.col-md-offset-2{align:'center', style:'padding-bottom:5%;'}
            - if can? :edit, @testi_first
              = link_to 'Edit', edit_testimonial_path(@testi_first), class:'btn btn-default'
              = link_to 'Destroy', @testi_first, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default'
      - @testimonials.each do |testimonial|
        .item
          %row
            %col-md-offset-2.col-md-8.col-md-offset-2{style:'padding:2% 0% 5% 0%;'}
              %p.testimonial=testimonial.body
              %div.row{style:'padding-top:4%;'}
                %div.col-sm-3
                  = image_tag testimonial.image.url(:thumb), style:'height:120px; width:150px;', class:'img-circle'
                %div.col-sm-9
                  %p.reviewer=testimonial.name
                  %p=testimonial.profession
          %row
            %col-md-offset-2.col-md-8.col-md-offset-2{align:'center', style:'padding-bottom:5%;'}
              - if can? :edit, testimonial
                = link_to 'Edit', edit_testimonial_path(testimonial), class:'btn btn-default'
                = link_to 'Destroy', testimonial, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default'


    %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel"}
      %span.glyphicon.glyphicon-chevron-left.white
      %span.sr-only Previous
    %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel"}
      %span.glyphicon.glyphicon-chevron-right.white
      %span.sr-only Next
  %br

  - if can? :create, Testimonial
    = link_to 'Add New Testimonial', new_testimonial_path, class:'btn btn-default'


:css
  .row {
    display: table;
  }

  [class*="col-sm-"] {
    float: none;
    display: table-cell;
    vertical-align: middle;
  }

  .testimonial{
    color: #ffffff;
    font-size: 1.2em;
    text-align: justify;
    font-style: italic;
  }
  .reviewer{
    color: #cfcfcf;
  }
  blockquote{
    text-align: justify;
    border: none;
  }
  .white{
    color: #ffffff;
  }
  .carousel-control:hover{
    opacity: 1;
  }
  .carousel-control{
    opacity: 0.7;
  }
  a:hover{
    background-color: transparent;
  }
  .container{
    padding: 0%;
  }
  .item{
    padding: 5% 0% 20% 0%;
  }