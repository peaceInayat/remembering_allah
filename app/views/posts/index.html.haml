%div.row
  %div.col-sm-2{style:'background-color: #f9f0e7;height:100vh; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);'}
    %ul.nav.nav-pills.nav-stacked{style:'margin:5% 0% 0% 5%;'}
      %li= link_to 'All Posts', posts_path, class:'nav_btn'
      - Category.where(section:'Article').each do |cat|
        %li= link_to cat.name, posts_path(category_id: cat.id), class:'nav_btn'
      %br
      = link_to 'Add Category', categories_path, class:'nav_btn'


  %div.col-sm-10
    .container{style:'margin-top:2%;'}
      .row
        - @posts.each do |article|
          .col-md-12
            .panel.panel-default
              .panel-heading
                %h4.single_line
                  =link_to article.title, article
                %hr
                %p.date= article.created_at.strftime("%B %d, %Y")
              .panel-body
                %p= truncate(article.body, :length => 200)
              .btn-group.btn-group-justified
                %a.btn.btn-primary{:href => edit_post_path(article)} Edit
                %a.btn.btn-primary{:href => article, method: :delete, data: { confirm: 'Are you sure?' }} Destroy


      = link_to 'New Article', new_post_path, class:'btn btn-default'

:css

  a:hover {
    color: #fff;
    text-decoration: none;
    background-color: rgba(245, 238, 238, 0.58);
  }
  .single_line {
    text-overflow: ellipsis;
    max-height: 26px;
    line-height: 26px;
    display: block;
    white-space: nowrap;
    overflow: hidden;
  }
  .panel-body {
    padding: 5px 15px;
  }
  hr{
    margin: 0px;
  }
  .nav_btn{
    display: block;
    padding: 4%;
    color: #442525;
    font-size: 1.5em;
    border-bottom: 1px solid #e0d8cf;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    background-color: #f9f0e7;
  }

  .nav-pills > li > a{
    border-radius: 0px;
  }

  .nav-pills > li > a:hover{
    background-color: #442525;
  }