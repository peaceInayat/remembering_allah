%div{style:'margin:3%;'}
  %div.row
    %div.col-sm-4.col-sm-offset-4.shadow{align:'center', style:'padding:1% 0 2.5% 0;border-radius:51%;'}
      %h3 Create a Category
      %br
      = simple_form_for(@category) do |f|
        = f.error_notification
        .form-inputs
          = f.text_field :name, placeholder:'Name', style:'padding:.6%;'
          %br
          %br
          = f.text_field :rank, placeholder:'Rank', style:'padding:.6%;'
          %br
          %br
          = f.select :section, options_for_select([['article' ,'Article'], ['wisdom', 'Wisdom'], ['video', 'Video'], ['audio', 'Audio']]),{}, style:'padding:1.3% 6%;'
          %br
        %br
        .form-actions
          = f.button :submit
  %div.row{style:'margin-top:2% !important;'}
    %div.col-sm-6
      .panel.panel-default
        %table.table.table-striped
          %thead
            %tr
              %th Article Categories
              %th Rank
              %th
              %th
          %tbody
            - @ar_cats.each do |category|
              %tr
                %td= category.name
                %td= category.rank
                %td= link_to 'Edit', edit_category_path(category), class:'btn btn-default'
                %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default'
