<%= simple_form_for(@testimonial) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%=h "Use <br> for new line" %>
    <br>
    <br>
    <%= f.input :body, :input_html => {:rows => 10} %>
    <%= f.input :rank, placeholder:'Any Integer' %>
    <%= f.input :name, placeholder:'Name, City/State' %>
    <%= f.input :profession %>
    <%#= f.input :image, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>